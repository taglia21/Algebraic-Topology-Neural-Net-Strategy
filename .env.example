# =============================================================================
# Alpaca Paper Trading API — REQUIRED
# Get keys at https://app.alpaca.markets/paper/dashboard/overview
# =============================================================================
ALPACA_API_KEY=your_alpaca_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_here
ALPACA_PAPER=true

# Legacy env var names (both conventions are supported)
APCA_API_KEY_ID=your_alpaca_key_here
APCA_API_SECRET_KEY=your_alpaca_secret_here
APCA_API_BASE_URL=https://paper-api.alpaca.markets

# =============================================================================
# Discord Bot — OPTIONAL (for alerts and monitoring)
# =============================================================================
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# =============================================================================
# Portfolio settings
# =============================================================================
PORTFOLIO_VALUE=100000
PAPER_TRADING=true

# Azure Text-to-Speech (Optional)
# AZURE_TTS_KEY=your_azure_tts_key_here
